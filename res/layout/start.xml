<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:weightSum="2"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <Button
            android:id="@+id/saved_paintings_btn"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:onClick="showSavedPaintingsActivity"
            android:text="Saved Paintings"/>
    <Button
            android:id="@+id/new_paintings_btn"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="New Painting"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/saved_paintings_btn"
            android:layout_centerInParent="true"
            android:onClick="startPaintingActivity"
            />

</RelativeLayout>